{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "redirects": [
    {
      "source": "/",
      "destination": "/ultra-quest",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/ultra-quest/(.*)",
      "destination": "/ultra-quest/index.html"
    },
    {
      "source": "/ultra-quest",
      "destination": "/ultra-quest/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
} 